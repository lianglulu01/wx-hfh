/* pages/productdetails/productdetails.wxss */
.main{background-color: #f4f4f4}
.is-fixed-top{
  position: fixed;
  top:0;
  z-index:999
}
.top_fixed {
  width:750rpx;
  background-color: #fff;
  color:#555;
  font-size:26rpx;
  display: flex;
  justify-content: space-around;
  height:103rpx;
  line-height: 103rpx;
}
.top_fixed image{
  width:60rpx;
  height:60rpx;
  margin-right: 8rpx;
  vertical-align: middle
}
.top_fixed text{
  text-align: center
}
.product_info_head{
  width:100%;
  margin-top:103rpx;
}
.top_slide{
  position: relative;
  width:100%;height:750rpx;
}
.pic{
  position: absolute;
  top:92%;left:45%;
  width:66rpx;height:38rpx;
  font-size: 24rpx;
  color:#fff;
  line-height: 38rpx;
  text-align: center;
  background: rgba(255,100,150,.8);
  border-radius: 10px;
  z-index: 10;
}
.index{
  position: absolute;
  top:92%;right:3%;
  font-size: 20rpx;
  color:#fff;
  width:60rpx;height:38rpx;
  line-height: 38rpx;
  text-align: center;
  background: rgba(0,0,0,.2);
  border-radius: 10px;
}
.info{
  padding: 24rpx;
  text-align: left;
  background: #fff;
}
.info .info_name{
  color:#555;
  font-size: 28rpx;
}
.info .info_price{
  color:#f46;
  font-size: 40rpx;
  margin:10rpx 0;
}
.info .info_sum{
  display: flex;
  justify-content: space-between;
  color:#aaa;
  font-size: 24rpx;
  padding:20rpx 0;
  border-bottom:1px solid #eee
}
.info .product_server>view{
  font-size: 24rpx;
  color: #555;
  margin:28rpx 20rpx 0 0;
  display: inline-block
}
.product_server image{
  width:30rpx;height:30rpx;
  vertical-align: middle;
}

.product_pay{
  margin:20rpx 0;
  padding:0 24rpx;
  height:90rpx;
  line-height: 90rpx;
  background: #fff;
  color:#555;
  font-size: 26rpx;
  text-align: left;
  display: flex;
  justify-content: space-between
}
.product_pay>view{
  display: flex;
  justify-content: flex-end
}
.product_pay image{
  width:36rpx;height:36rpx;
  margin: 25rpx 8rpx 0 30rpx;
}

.product_open{
  display: flex;
  justify-content: space-between;
  margin:20rpx 0;
  padding:0 24rpx;
  height:90rpx;
  line-height: 90rpx;
  background-color: white;
  color:#555;
  font-size: 26rpx;
}
.product_open image{
  width:36rpx;height:36rpx;
  margin-top:24rpx;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*规格弹出框 */
.commodity_attr_box {
  max-height: 800rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.commodity_attr_box image{
  width:200rpx
}
.ss{
  height:600rpx;
  overflow-x: auto;
}
.size,.style{
  display: flex;
  flex-direction: column;
}

/* 店铺信息 */
.product_info_shop{
  padding:28rpx 28rpx 50rpx;
  background-color: white;
}
.data{
  display: flex;
  justify-content: space-between
}
.name{
  display: flex
}
.name image{
  width:70rpx;height:70rpx;
  vertical-align: middle;
  margin-right: 10rpx
}
.name text{
  font-size: 27rpx;
  color:#555;
  line-height: 70rpx
}
.counts{
  display: flex;
  justify-content: space-evenly
}
.counts .count:first-child{
  border-right:1rpx solid #f4f4f4 
}
.count{
  display: flex;
  flex-direction: column;
  text-align: center;
  padding:0 20rpx;
  color:#555;
  font-size: 25rpx
}
.count text:last-child{
  color:#999;
}
.btn{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-evenly
}
.btn view{
  border: 1rpx solid #f4f4f4;
  border-radius: 40rpx;
  padding:18rpx 45rpx;
  font-size: 27rpx;
  color:#555;
}
.btn view image{
  width:35rpx;height:35rpx;
  vertical-align: middle;
  margin-right: 20rpx
}

.info_text{
  background-color: white;
  padding:20rpx;
  margin:20rpx 0;
}
.info_text view:first-child{
  color:#999;
  font-size: 28rpx;
}
.info_text view:last-child{
  color:#555;
  font-size: 26rpx;
  margin-top: 20rpx
}
.info_pic{background-color: white}
.info_pic image{
  width:100%;
}

.info_other{
  margin:24rpx 0 120rpx;
}
.info_other .see_other{
  font-size: 26rpx;
  color:#555;
  padding:20rpx;
  background-color: white;
  border-left: 8rpx solid #f46
}
.product_other{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
/* 上侧图片父组件样式 */
.product_other .itp{
  width:32.6%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 10rpx
}
/* 图片的宽高 */
.product_other .itp image{
  width:100%;
  height:252rpx;
}
.product_other .itp view:nth-child(2){
  font-size: 24rpx;
  text-overflow: ellipsis;
  height:32rpx;
  overflow: hidden;
  white-space: nowrap;
  margin:15rpx 0 5rpx 0; 
}
.product_other .itp view:nth-child(3){
  color:#f46;
  text-align: left;
  font-weight: 500;
  padding-bottom: 20rpx
}

.is-fixed-bottom{
  position: fixed;
  top:1100rpx;
  z-index:999;
  display: flex;
  box-shadow: 0 0 10rpx rgba(0,0,0,.4)
}
.bottom_fixed {
  width:320rpx;
  background-color: #fff;
  color:#555;
  font-size:25rpx;
  display: flex;
  justify-content: space-around;
  height:105rpx;
  line-height: 105rpx;
}
.bottom_fixed view{
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.bottom_fixed view image{
  width:60rpx;
  height:60rpx;
  margin-right: 8rpx;
}
.bottom_fixed text{
  text-align: center
}
.car_shop text{
  display: inline-block;
  height:105rpx;
  line-height: 105rpx;
  width:215rpx;
  text-align: center;
  color:#fff;
  font-size: 26rpx
}
.car_shop text:first-child{
  background-color: #ff9bae
}
.car_shop text:last-child{
  background-color: #ff4466
}