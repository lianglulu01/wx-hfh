/***************** 主题商品 *****************/
.special{
  padding:25rpx;
  background-color: white;
  margin:20rpx 0;
}
.special .rootstyle{
  display: flex;
  flex-direction: column;

}
/* 上侧图片父组件样式 */
.special .topimg{
  width:100%;
}
/* 上侧图片的宽高 */
.special .imgstyle{
  width:100%;
  height:220rpx
}
/* 下侧内容父组件样式 */
.special .bottom{
  display: flex;
  overflow-y: auto;
  height:100%;
}
/* 下侧图片价格父元素 */
.special .bottomip{
  margin: 3rpx 14rpx 6rpx 0;
  display: flex;
  flex-direction: column
}
/* 下侧图片样式 */
.special .bottomimg{
  width:174rpx;
  height:174rpx;
  border-radius: 0.3rem;
}
/* 下侧文本样式 */
.special .bottomprice{
  color:#ff4466;
  font-size: 26rpx;
  font-weight: 500;
  padding:5rpx 0 14rpx 0;
  text-align: center
}
/* 更多专题 按钮样式 */
.more{
  background: white;
  text-align: center
}
.more button{
  display: inline-block;
  padding: 8rpx 15rpx;
  color: #ff4466;
  font-weight: 400;
  border: 1px solid #ff4466;
  border-radius: 0.2rem;
  background-color: white
}

/***************** 热卖商品 *****************/
.selling_product{
  background-color: white
}
.selling_product .rootstyle{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
}
/* 上侧图片父组件样式 */
.selling_product .itp{
  width:32.5%;
  display: flex;
  flex-direction: column;
}
/* 图片的宽高 */
.selling_product .itp image{
  width:100%;
  height:230rpx;
}
.selling_product .itp view:nth-child(2){
  font-size: 24rpx;
  text-overflow: ellipsis;
  height:32rpx;
  overflow: hidden;
  white-space: nowrap;
  margin:15rpx 0 5rpx 0; 
}
.selling_product .itp view:nth-child(3){
  color:#f46;
  text-align: left;
  font-weight: 500;
  padding-bottom: 20rpx
}

/***************** 精选商品 *****************/
.new_product .rootstyle{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.titles{
  height:50rpx;
  display: flex;
  justify-content: space-around;
  padding-top:30rpx;
  font-size: 26rpx;
}

.titles>image{
  height:26rpx;
  width:35%;
  margin-top: 7rpx;
}

/* 上侧图片父组件样式 */
.new_product .itp{
  width:49.4%;
  background: white;
  margin-top:10rpx;
}
/* 图片的宽高 */
.new_product .itp>image{
  width:100%;
  height:370rpx
}
.new_product .tp{padding: 0 18rpx;}
.new_product .tp>view{margin:12rpx 0}
.new_product .tp>view:nth-child(1){
  font-size: 27rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.new_product .tp>view:nth-child(2){
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color:#bcbcbc;
  margin:15rpx 0
}
.new_product .tp>view:nth-child(3){
  color:#f46;
  font-size: 36rpx;
  text-align: left;
  font-weight: 500;
}

.new_product .tp>view:nth-child(3) text:last-child{
  font-size: 24rpx;
  color:#bcbcbc;
  margin-left: 28rpx;
}