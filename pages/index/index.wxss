/**index.wxss**/
page{
  background-color: #f4f4f4;
  color:#555;
}

/***************** 搜索框 *****************/
.page_search{
  padding:17rpx 3.5%;
  background-color: white;
}
.search{
  width: 100%;
}  
.search_arr {
  border-radius: 5rpx;  
  background-color: #f4f4f4
}  
.search_arr input{  
  margin-left: 38%;  
  height: 71rpx;  
  border-radius: 10rpx;
  color:#eee;
  font-size: 26rpx;
}
.search_arr image{  
  margin: 18rpx 15rpx 15rpx 30%;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 16px;  
  height: 16px;  
  text-align: center;  
}

/***************** 轮播图 *****************/
.top_slide{
  position: relative;
  width:100%;height:280rpx;
}

/***************** 商品分类 *****************/
.typelist{
  display: flex;
  flex-wrap: wrap;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  background-color: white;
  padding:15rpx 0;
}
.type{
  width:25%;
  display: flex;
  flex-direction: column;
  margin: 15rpx 0;
}
.type image{
  width:63%;
  margin: 0 auto;
}
.type text{
  text-align: center;
  color:#898989;
  font-size: 26rpx;
  margin-top:8rpx
}

/***************** 品牌馆/二手铺 *****************/
.trading{
  background-color: #fff;
  padding: 30rpx 24rpx;
  width:702rpx;
}
.nav_top{
  display: flex;
  justify-content: space-between
}
.nav_top image{
  width:34rpx;
  height:34rpx;
  vertical-align: middle
}
.nav_top view:first-child image{
  margin-right: 10rpx;
}
.nav_top view:last-child image{
  margin-left: 10rpx;
}
.nav_top view:first-child text{
  font-size: 28rpx;
  font-weight: 700;
  color:#555;
}
.nav_top view:last-child text{
  font-size: 25rpx;
  color:#999;
}
.nav_top:last-child image{
  width:116rpx;
}
.shoplist{
  display: flex;
  justify-content: space-between;
  padding:30rpx 0 10rpx;
}
.shoplist image{
  display: flex;
  width:116rpx;
  margin: 0 auto;
}

