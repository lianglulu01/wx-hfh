/* pages/typeproduct/typeproduct.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f4f4f4;
}
.parent{
  padding: 12rpx 20rpx;
  margin-bottom:10rpx;
  line-height: 80rpx;
  background-color: white;
}
.parent text{
  display: inline-block;
  height:60rpx;
  line-height: 60rpx;
  background-color: white;
  border-style: solid;
  border-width: 1px;
  border-color:#dcdcdc;
  border-radius: 8rpx;
  margin-right:20rpx;
  padding:0 20rpx;
  font-size: 28rpx;
  font-weight: 400;
}


.nav {
  background: white;
  z-index: 99;
  box-shadow: 0rpx -1.2rpx 10rpx 4rpx #dddddd99; /*for Android*/
  -webkit-box-shadow: 0px -0.6px 5px 2px #dddddd99;
}
.positionFixed {
  position: fixed;
  left: 0;
  top: 0;
  box-shadow: 0rpx -1.2rpx 10rpx 4rpx #dddddd99; /*for Android*/
  -webkit-box-shadow: 0px -0.6px 5px 2px #dddddd99;
}

